<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f9fafe"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:layout_weight="80"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:layout_weight="50"
            android:id="@+id/leftButton"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/waves"
                    android:layout_width="150dp"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/leftText"
                    android:textColor="@color/mimoWhite"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:text="Listen to\nRecordings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:layout_weight="50"
            android:id="@+id/rightButton"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />
                <ImageView
                    android:id="@+id/chemicals"
                    android:layout_width="150dp"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/rightText"
                    android:textColor="@color/mimoWhite"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:text="Test Your\nKnowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    android:id="@+id/topSet"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/set1"
                        android:layout_margin="5dp"
                        android:textColor="#FFF"
                        android:text="1"
                        android:background="@drawable/set_button"
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size" />
                    <Button
                        android:id="@+id/set2"
                        android:layout_margin="5dp"
                        android:textColor="#FFF"
                        android:text="2"
                        android:background="@drawable/set_button"
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size" />
                    <Button
                        android:id="@+id/set3"
                        android:layout_margin="5dp"
                        android:textColor="#FFF"
                        android:text="3"
                        android:background="@drawable/set_button"
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/bottomSet"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/set4"
                        android:layout_margin="5dp"
                        android:textColor="#FFF"
                        android:text="4"
                        android:background="@drawable/set_button"
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size" />
                    <Button
                        android:id="@+id/set5"
                        android:layout_margin="5dp"
                        android:textColor="#FFF"
                        android:text="5"
                        android:background="@drawable/set_button"
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:layout_weight="20"
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginEnd="10dp"
                android:id="@+id/settingsBtn"
                android:layout_gravity="right"
                android:src="@drawable/ico_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/bottomText"
                android:textColor="@color/mimoWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="Return to Topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>