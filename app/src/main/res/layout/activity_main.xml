                    android:textColor="@color/greyText"
                    android:text="24 Mins"
                    android:id="@+id/topic_2_audio_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

